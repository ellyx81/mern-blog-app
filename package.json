{
  "dependencies": {
    "concurrently": "^9.1.2"
  },
  "scripts": {
    "setup": "cd client && npm install && cd ../server && npm install",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "npm --prefix client start",
    "start:backend": "npm --prefix server start"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
